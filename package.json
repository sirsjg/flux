{
  "name": "flux-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun --filter @flux/web dev",
    "dev:server": "bun --filter @flux/server dev",
    "build": "node scripts/build-meta.mjs",
    "preview": "bun --filter @flux/web preview",
    "typecheck": "bun --filter @flux/shared build && bun --filter '*' build",
    "lint": "bun run typecheck",
    "clean": "find packages -name dist -type d -exec rm -rf {} + 2>/dev/null || true",
    "test": "bun test"
  }
}
